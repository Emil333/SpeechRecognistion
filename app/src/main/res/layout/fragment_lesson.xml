<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/learning_text"
        android:layout_marginTop="130dp"
        android:layout_centerHorizontal="true"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/translated_text"
        android:layout_below="@+id/learning_text"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/play_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/translated_text"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_play_button"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/microphone_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/translated_text"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_microphone"
        android:visibility="gone"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/user_narrated_text"
        android:layout_below="@+id/microphone_button"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />



</RelativeLayout>